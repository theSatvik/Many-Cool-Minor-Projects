                    <td></td>
                    <td class='align-left'>
                        <div class='error' id='error'></div>
                    </td>

                </tr>
                
                <tr>
                    <td colspan="2" class="center">
                        <input type="submit" value="SUBMIT" id="submit">
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="center">
                        <a href="/signup">CLICK HERE TO SIGN UP</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="center">
                        <a href="/changepassword">CLICK HERE TO RESET PASSWORD</a>
                    </td>
                </tr>
            </table>
            
            
            
        </form>
